<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.preraktrivedi.apps.tweetr"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.preraktrivedi.apps.tweetr.application.TweetrApp"
        parent="@style/Theme.AppCompat.Light"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="AA_DB_NAME"
            android:value="RestClient.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name="com.preraktrivedi.apps.tweetr.activities.TweetrMainActivity"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="com.preraktrivedi.apps.tweetr.activities.GenericFragmentActivity"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="com.preraktrivedi.apps.tweetr.activities.ComposeTweetActivity"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.preraktrivedi.apps.tweetr.activities.UserProfileActivity"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="com.preraktrivedi.apps.tweetr.activities.TweetrLandingActivity"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="com.preraktrivedi.apps.tweetr.activities.DetailedTweetActivity"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.preraktrivedi.apps.tweetr.activities.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="tweetrtwitterapp"
                    android:scheme="oauth" />
            </intent-filter>
        </activity>
    </application>

</manifest>